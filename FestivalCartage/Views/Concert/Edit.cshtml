@model Concert

<form method="post" asp-action="Edit"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Concert</h2>
            <hr/>
        </div>
       @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="concertName">Name</label>
            <input asp-for="concertName" class="form-control"/>
            <span asp-validation-for="concertName" class="text-danger"></span>
        </div>
          <div class="mb-3">
            <label asp-for="artistName">Artist</label>
            <input asp-for="artistName" class="form-control"/>
             <span asp-validation-for="artistName" class="text-danger"></span>
        </div>
          <div class="mb-3">
            <label asp-for="concertDate">Date</label>
            <input asp-for="concertDate" class="form-control"/>
             <span asp-validation-for="concertDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="concert" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section scripts{
    @{
    <spartial name="_ValidationScriptsPartial"/>
}
}

